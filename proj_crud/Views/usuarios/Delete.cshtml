@model proj_crud.Models.usuario

@{
    ViewBag.Title = "Eliminar Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="alert alert-warning shadow-sm">
        <h2 class="text-danger fw-bold">¿Estás seguro de que deseas eliminar este usuario?</h2>
        <p class="mb-0">Esta acción no se puede deshacer.</p>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white fw-semibold">
            Detalles del Usuario
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">DNI</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.dni)</dd>

                <dt class="col-sm-3">Nombre</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

                <dt class="col-sm-3">Apellido</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Apellido)</dd>

                <dt class="col-sm-3">Sexo</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.sexo)</dd>

                <dt class="col-sm-3">Contraseña</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Contrasena)</dd>

                <dt class="col-sm-3">Correo</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.correo)</dd>
            </dl>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="mt-4 d-flex justify-content-between">
            <input type="submit" value="Eliminar" class="btn btn-danger px-4" />
            @Html.ActionLink("⬅ Cancelar", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    }
</div>
