@model IEnumerable<proj_crud.Models.usuario>

@{
    ViewBag.Title = "Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold text-primary">Gestión de Usuarios</h2>
        @Html.ActionLink("➕ Crear Nuevo", "Create", null, new { @class = "btn btn-success" })
    </div>

    <table class="table table-bordered table-striped table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().dni)</th>
                <th>@Html.DisplayNameFor(model => model.First().Nombre)</th>
                <th>@Html.DisplayNameFor(model => model.First().Apellido)</th>
                <th>@Html.DisplayNameFor(model => model.First().sexo)</th>
                <th>@Html.DisplayNameFor(model => model.First().Contrasena)</th>
                <th>@Html.DisplayNameFor(model => model.First().correo)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.dni)</td>
                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.Apellido)</td>
                    <td>@Html.DisplayFor(modelItem => item.sexo)</td>
                    <td>@Html.DisplayFor(modelItem => item.Contrasena)</td>
                    <td>@Html.DisplayFor(modelItem => item.correo)</td>
                    <td>
                        <div class="btn-group" role="group">
                            @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-sm" })
                            @Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm mx-1" })
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
